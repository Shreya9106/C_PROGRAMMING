//This program is to check whether a given number is positive, negative or zero

#include<stdio.h>
int main()
{
    int num;
    printf("Enter a number:\n");
    scanf("%d",&num);
    if(num<0)
    {
        printf("The number is negative");
    }
    else if(num>0)
    {
        printf("The number is positive");
    }
    else
    {
        printf("You entered zero");
    }
    return 0;
}

Sample Output:
Enter a number: -56
The number is negative

